<VirtualHost *:{{ apache_listening_port }}>
    ServerAdmin webmaster@{{ item.server_name }}
    ServerName {{ item.server_name }}
    DocumentRoot "{{ item.doc_root}}/{{item.name}}"
    ErrorLog ${APACHE_LOG_DIR}/{{ item.name }}-error.log
    CustomLog ${APACHE_LOG_DIR}/{{ item.name }}-access.log combined
</VirtualHost>
